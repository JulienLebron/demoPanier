{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}

<h1 class="text-center">Votre Panier</h1>

{% if items %}

<table class="table table-bordered table-hover text-center mt-5">
    <thead class="table-secondary">
        <tr>
            <th colspan='5'>Panier</th>
        </tr>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        {% for item in items %}
        <tr>
            <td>{{ item.product.title }}</td>
            <td>{{ item.product.price }} ‚Ç¨</td>
            <td>
                <a href="{{ path('cart_decrement', {id: item.product.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-minus"></i></a>
                &nbsp;{{ item.quantity }}&nbsp;
                <a href="{{ path('cart_add', {id: item.product.id}) }}" class="btn btn-sm btn-success"><i class="fas fa-plus"></i></a>
            </td>
            <td>{{ item.product.price * item.quantity }} ‚Ç¨</td>
            <td>
                <a href="{{ path('cart_remove', {id: item.product.id}) }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
            </td>
        </tr>
        {% endfor %}
    </tbody>
    <tfoot class="table-info">
        <tr>
            <td colspan='3' class="text-end">Total : </td>
            <td>{{ total }} ‚Ç¨</td>
            <td><a href="{{ path('cart_empty') }}" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a></td>
        </tr>
    </tfoot>
</table>
{% else %}
<table class="table table-bordered table-hover text-center mt-5">
    <thead class="table-secondary">
        <tr>
            <th colspan='5'>Panier</th>
        </tr>
        <tr>
            <th>Produit</th>
            <th>Prix</th>
            <th>Quantit√©</th>
            <th>Total</th>
            <th>Supprimer</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td colspan='5'>üó®Ô∏è Votre panier est vide.</td>
        </tr>
    </tbody>
</table>
{% endif %}

{% endblock %}